<package name="info.codingcorner.wcf.recaptcha" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/package.xsd">
	<packageinformation>
		<packagename>reCAPTCHA Support</packagename>
		<packagedescription>This plugin replaces the original captcha with the popular reCAPTCHA.</packagedescription>
		<packageurl>http://codingcorner.info/projekte/wcf/recaptcha-support/</packageurl>
		<version>1.0.0 Beta 3</version>
		<date>2010-05-21</date>
		<unique>1</unique>
		<plugin>com.woltlab.wcf.data.image.captcha</plugin>
	</packageinformation>

	<authorinformation>
		<author>Coding Corner</author>
		<authorurl>http://codingcorner.info/</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="1.1.2">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="1.1.0">com.woltlab.wcf.data.image.captcha</requiredpackage>
	</requiredpackages>

	<instructions type="install">
		<!-- files -->
		<files>files.tar</files>
		<templates>templates.tar</templates>
		
		<!-- config -->
		<options>options.xml</options>
		<eventlistener>eventlistener.xml</eventlistener>
		<templatepatch>templates.diff</templatepatch>
		
		<!-- languages -->
		<languages languagecode="de">language/de.xml</languages>
		<languages languagecode="de-informal">language/de-informal.xml</languages>
		<languages languagecode="en">language/en.xml</languages>
	</instructions>

	<instructions type="update" fromversion="1.0.0 Beta 1">
		<!-- files -->
		<files>files.tar</files>
		<templatepatch>templates_b12.diff</templatepatch>
	</instructions>
	
	<instructions type="update" fromversion="1.0.0 Beta 2">
		<!-- files -->
		<files>files.tar</files>
		<templatepatch>templates_b12.diff</templatepatch>
	</instructions>
</package>
